<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_season_item"
    android:padding="2dp"
    android:layout_marginRight="4dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/X021"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/colorPrimary">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/season_img"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="season 1"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/X021"
        android:id="@+id/season_number"
        android:layout_alignLeft="@id/X021"
        android:layout_toLeftOf="@id/season_episodes"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Eps"
        android:gravity="center_horizontal"
        android:id="@+id/season_episodes"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:layout_below="@id/X021"
        android:layout_alignRight="@id/X021"/>

</RelativeLayout>