<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".view.BuyAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/x043">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Buy Credit"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_icon"
            app:tint="@color/colorAccent"
            android:layout_marginLeft="4dp"
            android:id="@+id/back_icon_buy_credit"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x044"
        android:layout_below="@id/x043"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/double_tik_icon"
                android:tint="@android:color/holo_green_light"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you can charge you account monthly and yearly"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:fontFamily="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/double_tik_icon"
                android:tint="@android:color/holo_green_light"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you can watch all the movies without any limitation"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:fontFamily="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/double_tik_icon"
                android:tint="@android:color/holo_green_light"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you can request us to provide a movie for you"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:fontFamily="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/double_tik_icon"
                android:tint="@android:color/holo_green_light"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="best back up support for your account"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:fontFamily="monospace"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x044"
        android:layout_marginTop="64dp"
        android:id="@+id/x045"
        android:weightSum="4"
        android:orientation="horizontal">



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/one_month_CV"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginRight="4dp"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/credit_first_period_txt"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/credit_first_off_txt"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/credit_first_price_txt"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_below="@id/credit_first_price_txt"
                        android:id="@+id/credit_first_price_by_off_txt"
                        android:layout_marginBottom="8dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"/>

                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/three_month_CV"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/credit_second_period_txt"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/credit_second_off_txt"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/credit_second_price_txt"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_below="@id/credit_second_price_txt"
                        android:id="@+id/credit_second_price_by_off_txt"
                        android:layout_marginBottom="8dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"/>

                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x045"
        android:layout_marginTop="8dp"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/six_month_CV"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/credit_forth_period_txt"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/credit_forth_off_txt"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/credit_forth_price_txt"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_below="@id/credit_forth_price_txt"
                        android:id="@+id/credit_forth_price_by_off_txt"
                        android:layout_marginBottom="8dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"/>

                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/one_year_CV"
            android:layout_marginRight="8dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginLeft="4dp"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/credit_third_period_txt"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/credit_third_off_txt"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/credit_third_price_txt"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_below="@id/credit_third_price_txt"
                        android:id="@+id/credit_third_price_by_off_txt"
                        android:layout_marginBottom="8dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"/>

                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>




</RelativeLayout>